<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constraintlayout_Activity4">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".02"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".1"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_constraintStart_toStartOf="@+id/ver_1"
        app:layout_constraintEnd_toEndOf="@+id/ver_2"
        app:layout_constraintTop_toTopOf="@id/hor_1"
        app:layout_constraintBottom_toBottomOf="@id/hor_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_Ak"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/ver_1"
        app:layout_constraintEnd_toEndOf="@+id/ver_2"
        app:layout_constraintTop_toTopOf="@id/hor_1"
        app:layout_constraintBottom_toBottomOf="@id/hor_2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver2_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".6"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor2_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".23"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/green"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/ver_1"
        app:layout_constraintEnd_toEndOf="@+id/ver2_2"
        app:layout_constraintTop_toTopOf="@id/hor_2"
        app:layout_constraintBottom_toBottomOf="@id/hor2_2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor3_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".23"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/red"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/ver2_2"
        app:layout_constraintEnd_toEndOf="@+id/ver_2"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/hor_2"
        app:layout_constraintBottom_toBottomOf="@id/hor3_2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor4_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#673AB7"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/ver5_2"
        app:layout_constraintEnd_toEndOf="@+id/ver_2"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/hor3_2"
        app:layout_constraintBottom_toBottomOf="@id/hor4_2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver5_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6082725" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor5_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"
        />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/hor5_2"
        app:layout_constraintEnd_toEndOf="@+id/ver5_2"
        app:layout_constraintStart_toStartOf="@+id/ver6_2"
        app:layout_constraintTop_toTopOf="@id/hor2_2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ver6_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.296" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor6_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/ff9"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/ver_1"
        app:layout_constraintEnd_toEndOf="@+id/ver6_2"
        app:layout_constraintTop_toTopOf="@id/hor2_2"
        app:layout_constraintBottom_toBottomOf="@id/hor6_2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor7_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".98"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/ver_1"
        app:layout_constraintEnd_toEndOf="@+id/ver6_2"
        app:layout_constraintTop_toTopOf="@id/hor6_2"
        app:layout_constraintBottom_toBottomOf="@id/hor7_2"/>

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="@id/hor7_2"
        app:layout_constraintEnd_toEndOf="@+id/ver5_2"
        app:layout_constraintStart_toStartOf="@+id/ver6_2"
        app:layout_constraintTop_toTopOf="@id/hor5_2" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/ver5_2"
        app:layout_constraintEnd_toEndOf="@+id/ver_2"
        app:layout_constraintTop_toTopOf="@id/hor4_2"
        app:layout_constraintBottom_toBottomOf="@id/hor7_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>